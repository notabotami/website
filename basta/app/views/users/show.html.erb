<% if @user != @current_user %>
<h2><%="#{@user.user_id}'s profile"%></h2>

<table class="table table-striped table-condensed">
<tbody>
  <tr>
    <td >first name: </td>
    <td ><%=@first_name%></td>
  </tr>

  <tr>
    <td >last name: </td>
    <td ><%=@last_name%></td>
  </tr>

  <tr>
    <td >email: </td>
    <td ><%=@email%></td>
  </tr>

  <tr>
    <td >phone number: </td>
    <td ><%=@phone_number%></td>

  </tr>

  <tr>
    <td >role: </td>
    <td ><%=@role%></td>

  </tr>
</tbody>
</table>
<%= link_to('edit profile', edit_user_path(@user)) %>
